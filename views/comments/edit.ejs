<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1 style="text-align:center">Edit Comment by: <%= comment.author.commentAuthor %> </h1>
            <div style="width: 30%; margin: 25px auto;">
                    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                                <input class="form-control" type="text" name="comment[commentText]" value="<%= comment.commentText %>">
                        </div>
                         
                        <div class="form-group">
                                <button class="btn btn-large btn-primary btn-block ">Update Comment</button>
                        </div>    
                    </form>
                    
            </div>
            
            
    </div>
</div>
    